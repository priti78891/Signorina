<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProductActivity">
    <ImageView
        android:id="@+id/p_image"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/p_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/p_image"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/p_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Description"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_below="@+id/p_name"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/p_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Price"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_below="@+id/p_description"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/quqntity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_below="@+id/p_price"
        android:textAlignment="center"
        android:layout_marginTop="55dp"
        android:layout_margin="150dp"
        />

    <ImageView
        android:id="@+id/p_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/p_price"
        android:layout_alignParentStart="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="148dp"
        android:src="@drawable/add"
        android:background="@color/black"
        />

    <ImageView
        android:id="@+id/p_remove"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/p_price"
        android:layout_alignParentStart="true"
        android:layout_marginStart="283dp"
        android:layout_marginTop="148dp"
        android:background="@color/black"
        android:src="@drawable/minus" />


</RelativeLayout>